generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  password  String  // hashed, even if simulated
  role      Role @default(STUDENT)
  createdAt DateTime @default(now())
  Requests  Request[]
  Loans     Loan[]
}

enum Role {
  STUDENT
  STAFF
  ADMIN
}

model Equipment {
  id         String  @id @default(cuid())
  name       String
  // category   Category @relation(fields: [categoryId], references: [id])
  category String
  condition  String
  quantity   Int      // total items
  available  Int      // derived but stored for speed
  createdAt  DateTime @default(now())
  Requests   Request[]
  Loans      Loan[]
}

// model Category {
//   id         String      @id @default(cuid())
